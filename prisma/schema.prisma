generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  USER
}

enum EmailStatus {
  SENT
  FAILED
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String
  role         UserRole @default(USER)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  auditLogs    AuditLog[] @relation("AuditActor")
}

model SmtpConfig {
  id          String   @id
  name        String
  host        String
  port        Int
  secure      Boolean  @default(false)
  username    String
  passwordEnc String?  // encrypted at rest
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Contact {
  id          String   @id
  name      String
  emails    Json     // string[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Template {
  id          String   @id
  name      String
  subject   String
  body      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model CensusFile {
  id          String   @id
  name        String
  type        String
  size        BigInt
  storagePath String   // file path on server
  uploadDate  BigInt
  createdAt   DateTime @default(now())
}

model CensusSettings {
  id        String   @id @default("singleton")
  data      Json     // flexible settings object
  updatedAt DateTime @updatedAt
}

model EmailMessage {
  id              String      @id @default(cuid())
  to              String
  cc              Json        // string[]
  subject         String
  body            String
  attachments     Json        // EmailAttachment[]
  category        String
  status          EmailStatus
  smtpProfileId   String?
  smtpProfileName String?
  createdAt       DateTime @default(now())
}

model AuditLog {
  id        String   @id @default(cuid())
  actorId   String?
  actor     User?    @relation("AuditActor", fields: [actorId], references: [id], onDelete: SetNull)
  action    String
  model     String
  recordId  String?
  before    Json?
  after     Json?
  ip        String?
  userAgent String?
  createdAt DateTime @default(now())

  @@index([model, recordId])
  @@index([createdAt])
}
